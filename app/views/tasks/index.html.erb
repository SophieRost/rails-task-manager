<h1>My Tasks</h1>
<p><% @tasks.each do |task| %>
  <li>
    <%= task[:completed] %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </li>
<% end %></p>

<%= link_to "Add a new task", new_path  %>
